<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/White"

    >

    <TextView
        android:id="@+id/textCommen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/commensd"
        android:maxLength="130"
        android:layout_alignParentLeft="true" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"

        android:background="@drawable/personicon"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="27dp"
        android:layout_above="@+id/textCommen"
        android:layout_alignParentEnd="true"

        android:background="@drawable/starimage"
        android:layout_alignParentRight="true"
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="30dp"
        android:text="Anonymous"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="73dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textCommen"
          android:layout_marginRight="55dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentEnd="true"
        android:text="5.0"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textTimesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="12/12/18 3:40"
        android:textColor="@color/vlu_blue"
        android:layout_margin="7dp"
        android:layout_alignParentRight="true" />


</RelativeLayout>